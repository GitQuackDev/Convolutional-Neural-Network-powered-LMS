# ===========================================
# FRONTEND ENVIRONMENT CONFIGURATION
# ===========================================
# Vite-specific environment variables (must start with VITE_)

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_TIMEOUT=10000

# Authentication
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# AI/ML Features
VITE_ENABLE_CNN_ANALYSIS=true
VITE_CNN_API_ENDPOINT=http://localhost:5000/api/cnn

# UI Configuration
VITE_APP_TITLE=LMS CNN Platform
VITE_APP_DESCRIPTION=Learning Management System with CNN Analysis

# Development Tools
VITE_ENABLE_MOCK_DATA=true
VITE_SHOW_DEV_TOOLS=true

# ===========================================
# NOTES FOR VITE
# ===========================================
# - Only variables prefixed with VITE_ are exposed to the client
# - Never put sensitive data in VITE_ variables (they're public!)
# - Use import.meta.env.VITE_VARIABLE_NAME to access in code
# - Restart dev server after changing environment variables
